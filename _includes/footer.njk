<footer class="flex flex-wrap bg-contain bg-no-repeat pt-10 pb-20 px-2 sm:px-6 lg:px-16">
    <img class="md:hidden w-80 mx-auto p-6 footer-logo" src="{{ global.siteLogos[0].acf.logo.url }}" />
    <div class="flex flex-wrap items-start w-full max-w-8xl xl:justify-evenly mx-auto">
        <img class="hidden md:block p-6 footer-logo" src="{{ global.siteLogos[0].acf.logo.url }}" />
        <ul class="p-6">
            {% for item in menus.footerMenu %}
                <a href="{{ item.url }}">
                    <h5 class="text-white footer_top-title {% if loop.first !== true %}pt-6{% endif %} pb-1">{{ item.title }}</h5>
                </a>
                {% if item.children.length %}
                    {% for item1 in item.children %}
                        <a href="{{ item1.url }}">
                            <li class="text-white tag footer_child-title">{{ item1.title }}</li>
                        </a>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ul>
        <ul class="p-6">
            {% for item in menus.footerMenu2 %}
                <a href="{{ item.url }}">
                    <h5 class="text-white footer_top-title {% if loop.first !== true %}pt-6{% endif %} pb-1">{{ item.title }}</h5>
                </a>
                {% if item.children.length %}
                    {% for item1 in item.children %}
                        <a href="{{ item1.url }}">
                            <li class="text-white tag footer_child-title">{{ item1.title }}</li>
                        </a>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ul>
        <ul class="p-6">
                <a href="/members/">
                    <h5 class="text-white pb-6 footer_top-title">Members Area</h5>
                </a>
                <a href="/schedule/">
                    <h5 class="text-white pb-6 footer_top-title">Schedule</h5>
                </a>
        </ul>
        <div class="p-6">
            <h5 class="text-white footer_top-title">Contact Us</h5>
            <address class="w-full text-white py-3">
                {% for item in global.siteAddresses[0].acf.value_list %}{% if item.type == 'Primary' %}{{ item.street }}
                <br />
                {{ item.city }}, {{ item.state }} {{ item.zip }}
                {% endif %}{% endfor %}
            </address>
            <div class="w-full">
                <a class="text-white footer-email" href='mailto:{% for item in global.siteEmail[0].acf.value_list %}{% if item.type == "Primary" %}{{ item.value }}{% endif %}{% endfor %}'>
                    {% for item in global.siteEmail[0].acf.value_list %}{% if item.type == "Primary" %}{{ item.value }}{% endif %}{% endfor %}
                </a>
            </div>
            <a class="text-white footer-tele" href='tel:{% for item in global.sitePhone[0].acf.value_list %}{% if item.type == "Primary" %}{{ item.value }}{% endif %}{% endfor %}'>
                {% for item in global.sitePhone[0].acf.value_list %}{% if item.type == "Primary" %}{{ item.value }}{% endif %}{% endfor %}
            </a>
        </div>
        <div class="flex flex-wrap items-center w-full justify-between mx-auto pt-12 px-2 sm:px-6 lg:px-24">
            <div class="w-full md:w-1/3 pb-8 md:pb-0">
              <p class="text-2xs text-white text-center md:text-left copyright-text">&copy; <span id="copyright-date"></span> {{ siteData.siteName }}, All Rights Reserved</p>
            </div>
            <div class="w-full md:w-1/3 text-center mx-auto pb-8 md:pb-0">
              <a class="" target="_blank" href="https://madebypioneer.com">
              <img class="flex flex-wrap mx-auto text-center" src="https://inside.statesborogolfcarts.com/wp-content/uploads/2021/03/pioneer-design-marketing-logotype-inverted-rgb-1.svg" width="60px" height="30px" onmouseover="hover(this);" onmouseout="unhover(this);">
              </a>
            </div>
            <div class="w-full md:w-1/3 sm:ml-auto text-center md:text-right pb-8 md:pb-0">
              <div class="w-full mx-auto text-lg">
                <a href="{% for item in global.siteSocial[0].acf.value_list %}{% if item.type == 'Instagram' %}{{ item.value }}{% endif %}{% endfor %}" target="_blank">
                  <i class="text-white p-3 fab fa-instagram"></i>
                </a>
                <a href="{% for item in global.siteSocial[0].acf.value_list %}{% if item.type == 'Facebook' %}{{ item.value }}{% endif %}{% endfor %}" target="_blank">
                  <i class="text-white p-3 fab fa-facebook-square"></i>
                </a>
              </div>
            </div>
        </div>
    </div>
</footer>

<div id="sign-up-modal" class="micromodal-slide">
    <div class="relative w-full h-full items-center justify-center modal__overlay" tabindex="-1" data-micromodal-close>
        <div class="relative w-full h-full items-center justify-center modal__overlay" tabindex="-1" data-micromodal-close>
            <i class="hidden xl:block absolute top-0 right-0 text-5xl text-fus-green mt-12 mr-8 hover:cursor-pointer fas fa-window-close" data-micromodal-close></i>
            <div class="flex flex-wrap w-11/12 md:w-2/3 bg-white mx-auto rounded-lg overflow-y-scroll py-12 md:py-12 my-12 modal__container">
              <h2 class="w-full text-center">Sign Up</h2>
              <iframe src="https://crossfitboro.uplaunch.com/new_lead_form_embed/1592" class="w-full md:w-1/2 h-72 mx-auto"></iframe>
            </div>
          </div>
    </div>
</div>

<script>
let allButtons = document.querySelectorAll('button');

for (var i = 0; i < allButtons.length; i++) {
  if (allButtons[i].parentElement.getAttribute('href') == "") {
    console.log(allButtons[i]);
    allButtons[i].setAttribute('data-micromodal-trigger', 'sign-up-modal');
  }
}
</script>