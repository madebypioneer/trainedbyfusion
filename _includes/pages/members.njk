<div class="bg-cover bg-no-repeat -mt-1 -ml-1 pt-12 pb-32 single-program-hero">
    <div class="w-11/12 mx-auto">
        <h1 class="text-5xl sm:text-6xl md:text-h1-init text-white text-center md:text-left">{{ wpage.title }}</h1>
    </div>
</div>

<div class="flex flex-wrap items-center w-full lg:w-11/12 max-w-8xl -mt-56 mx-auto  pb-56 text-center md:text-left">
    <style>
        .members-hero-image {
            background-image: url('{{ wpage.heroImg }}');
            clip-path: polygon(0 0%, 100% 0, 100% 80%, 0% 100%);
        }
    </style>
    <div data-aos="fade-down" data-aos-duration="1200" class="w-full lg:w-7/12 bg-top bg-cover bg-no-repeat py-32 lg:py-80 z-min1 members-hero-image">
        <div class="py-32"></div>
    </div>
    <div class="w-full md:w-2/3 lg:w-5/12 mx-auto pt-8 lg:pt-0 px-6 xxl:px-16 single-program-hero-paragraph">
        <p class="pb-8 xs:px-8 sm:px-24 md:px-0 whitespace-pre-line lg-p">{{ wpage.heroParagraph }}</p>
        <div class="flex flex-wrap md:flex-no-wrap lg:flex-wrap xl:flex-no-wrap items-center">
            {% for item in wpage.resourcesButtons %}
            <a href="{{ item.button_link }}" class="w-full lg:w-auto mx-auto md:pr-6" target="_blank">
                <button class="mb-8 md:mb-0 lg:mb-8 xl:mb-0 py-3 leading-none green-button">{{ item.button_text }}</button>
            </a>
            {% endfor %}
        </div>
    </div>
</div>