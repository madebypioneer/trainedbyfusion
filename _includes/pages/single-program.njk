<div class="bg-cover bg-no-repeat -mt-1 -ml-1 pt-12 pb-40 single-program-hero">
    <div class="w-11/12 mx-auto">
        <h1 class="text-5xl sm:text-6xl md:text-h1-init text-white text-center md:text-left">{{ wpage.title }}</h1>
    </div>
</div>

<div class="flex flex-wrap items-center w-full lg:w-11/12 max-w-8xl -mt-56 mx-auto text-center md:text-left">
    <style>
        .single-program-hero-image {
            background-image: url('{{ item.singlePageHeroImg }}');
            clip-path: polygon(0 0%, 100% 0, 100% 80%, 0% 100%);
        }
    </style>
    <div data-aos="fade-down" data-aos-duration="1200" class="w-full lg:w-7/12 bg-top bg-cover bg-no-repeat py-32 lg:py-80 z-min1 single-program-hero-image">
        <div class="py-32"></div>
    </div>
