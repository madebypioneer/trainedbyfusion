<div class="bg-cover bg-no-repeat -mt-1 -ml-1 pt-12 pb-40 single-program-hero">
    <div class="w-11/12 mx-auto">
        <h1 class="text-5xl sm:text-6xl md:text-h1-init text-white text-center md:text-left">{{ wpage.title }}</h1>
    </div>
</div>

<video controls class="w-full mx-auto max-w-5xl py-8 px-2">
  <source src="{{ wpage.acf.video.url }}" type="video/mp4">
  <source src="video.webm" type="video/webm">
</video>

<div class="w-full md:w-2/3 max-w-6xl mx-auto pt-8 pb-12 px-2 text-center">
    <h2 class="pb-6">{{ wpage.acf.content.title }}</h2>
    <p class="pb-8 xs:px-8 whitespace-pre-line lg-p">{{ wpage.acf.content.paragraph }}</p>
</div>

<div class="flex flex-wrap items-center justify-between max-w-8xl mx-auto pt-40 pb-24 px-16">
    <h3 class="pb-6">Programs</h3>  
    <div class="bg-fus-green w-80 h-1 -mt-6"></div>
    {% for item in wpages %}
        {% if item.template == "templates/single-program.php" %}
            {% if item.title !== wpage.title %}
            <a href="/{{ item.slug }}" class="pb-6 pr-6 gradient-link">
                <h3>{{ item.title }}</h3>
            </a>
            {% endif %}
        {% endif %}
    {% endfor %}
</div>

{% include "../global/bottom-cta.njk" %}